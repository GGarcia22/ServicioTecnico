@model List<ModelServicio>
@{
    ViewData["Title"] = "ListarTodosLosServicios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h<div class="card">
    <div class="card-header">
        Servicio Tecnico:
    </div>
    <div class="card-body"> 
        <a asp-action="Listar" asp-controller="CRUD" id="boton">Volver atras</a>
        <span id="mensaje">@TempData["Mensaje"]</span> <label> Cantidad de servicios realizados: @Model.Count</label> 
    </div>
</div>
<hr/>
<div class="container">
<table class="d-lg-table table-bordered" id="tablaLista">
    <thead>
        <tr>
            <th>Cliente:</th>
            <th>Dispositivo:</th>            
            <th>Descripcion:</th>
            <th>Estado:</th>            
            <th>Fecha De Ingreso:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.idCliente</td>
                <td>@item.dispositivo</td>
                <td>@item.descripcion</td>
                <td>@item.estado</td>
                <td>@item.fechaDeIngreso</td>
            </tr>
        }
    </tbody>
</table>
</div>




