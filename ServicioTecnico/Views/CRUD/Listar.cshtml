@model List<ModelCliente>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista de Clientes
    </div>
    <div class="card-body">
        <a asp-action="IngresarCliente" asp-controller="CRUD" id="boton">Ingresar nuevo cliente</a>
        <span id="mensaje">@TempData["Mensaje"]</span> <label> Cantidad de clientes: @Model.Count </label>
    </div>
</div>
<hr/>
<table class="d-lg-table table-bordered" id="tablaLista">
    <thead>
        <tr>
            <th>Nombre:</th>
            <th>Domicilio:</th>            
            <th>Telefono:</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.nombre</td>
                <td>@item.domicilio</td>
                <td>@item.telefono</td>
                <td>
                    <a asp-action="EditarCliente" asp-controller="CRUD" id="boton" asp-route-id="@item.id">Editar</a>       
                    <a asp-action="VerServicios" asp-controller="CRUD" id="boton" asp-route-id="@item.id">Ver Servicios</a>   
                    <a asp-action="EliminarCliente" asp-controller="CRUD" id="boton" asp-route-id="@item.id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>



